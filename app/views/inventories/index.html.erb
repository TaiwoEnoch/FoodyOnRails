<% @inventories.each do |inventory|%>
<div class="container my-4">
 <div class="row border border-2 p-3 mb-3">
 <div class="col-4">
 
 <%= link_to inventory.name, inventory, class: 'nav-link'%>
  <% if inventory.user == current_user %>
  <%= button_to "Delete", inventory_path(inventory), method: :delete, data: { confirm: "Are you sure you want to delete this inventory?" }, class: 'my-2' %>
<% end %>
 </div>
 <div class="col-8">
  <%= inventory.description%>
 </div>
 </div>
</div>
<%end%>