<h2 class="text-center">Shopping List</h2>
<section>
  <div class="d-flex justify-content-between align-items-center">
    <div>
      <p>Amount of food to buy: <%= @total_missing_items %></p>
      <p>Total value of food needed: $<%= @total_missing_price %></p>
    </div>
    <div>
      <p>Recipe: <%= link_to @recipe.name, recipe_path(@recipe) %></p>
      <p>Inventory: <%= link_to @inventory.name, inventory_path(@inventory) %></p>
    </div>
  </div>
  <% if @missing_foods.any? %>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">Food</th>
          <th scope="col">Quantity</th>
          <th scope="col">Price</th>
        </tr>
      </thead>
      <tbody>
<% @missing_foods.each do |food| %>
  <tr>
    <td><%= food.name %></td>
    <td><%= food.inventory_foods.first.quantity %></td>
    <td>$<%= food.price %></td>
  </tr>
<% end %>

      </tbody>
    </table>
  <% else %>
    <p class="text-center">You have everything needed to make that recipe!</p>
  <% end %>
</section>
