<% @recipes.each do |recipe| %>
<div class="container my-4">
 <div class="row border border-secondary-subtle border-2 p-3 mb-3">
 <div class="col-4">
 
 <%= link_to recipe.name, recipe, class: 'nav-link fs-2'%>
  <% if recipe.user == current_user %>
  <%= button_to "Delete", recipe_path(recipe), method: :delete, data: { confirm: "Are you sure you want to delete this recipe?" }, class: 'btn btn-danger my-2 fs-5 p-1 custom-button-width' %>
<% end %>
 </div>
 <div class="col-8">
  <p class="fs-4"><%= recipe.description%></p>
 </div>
 </div>
</div>
<%end%>